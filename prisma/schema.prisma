generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  plan      String   @default("FREE") // FREE, PRO
  planExpiresAt DateTime? // Дата окончания PRO подписки
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связанные данные
  wheels         Wheel[]
  spins          Spin[]
  notifications  Notification[]
  subscriptions  Subscription[]

  @@map("users")
}

model Wheel {
  id          String   @id @default(cuid())
  title       String
  description String?
  segments    Json     // Массив сегментов колеса
  isPublic    Boolean  @default(false)
  publicSlug  String?  @unique // Уникальная ссылка для публичного доступа
  allowGuestSpin Boolean @default(false) // Разрешить гостям крутить рулетку
  customDesign Json?   // Кастомный дизайн для PRO пользователей
  segmentWeights Json? // Веса сегментов для PRO пользователей
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  spins       Spin[]
  drawHistory DrawHistory[]

  @@map("wheels")
}

model Spin {
  id        String   @id @default(cuid())
  result    String   // Результат вращения
  participant String? // Имя участника
  createdAt DateTime @default(now())

  // Связи
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wheelId   String
  wheel     Wheel    @relation(fields: [wheelId], references: [id], onDelete: Cascade)

  @@map("spins")
}

// Новая модель для истории розыгрышей
model DrawHistory {
  id          String   @id @default(cuid())
  prize       String   // Выпавший приз
  participant String?  // Имя участника (если есть)
  metadata    Json?    // Дополнительные данные (цвет сегмента, вероятность и т.д.)
  createdAt   DateTime @default(now())

  // Связи
  wheelId     String
  wheel       Wheel    @relation(fields: [wheelId], references: [id], onDelete: Cascade)

  @@map("draw_history")
}

// Модель для уведомлений
model Notification {
  id        String   @id @default(cuid())
  type      String   // NEW_PARTICIPANT, DRAW_COMPLETED, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  metadata  Json?    // Дополнительные данные
  createdAt DateTime @default(now())

  // Связи
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Модель для подписок
model Subscription {
  id        String   @id @default(cuid())
  plan      String   // PRO
  status    String   // ACTIVE, EXPIRED, CANCELLED
  amount    Int      // Сумма в копейках
  currency  String   @default("RUB")
  period    String   // MONTHLY, YEARLY
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связи
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}
